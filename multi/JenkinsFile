 

  node("multi-con") {
    //git url: 'https://github.com/thevictorgreen/jnlp-test.git'
    stage('Container 1') {
      container('jnlp') {
        sh """
        git clone 'https://github.com/thevictorgreen/jnlp-test.git'
        echo $POD_CONTAINER
        """
      }
    }

    stage('Container 2') {
      container('golang') {
        sh """
        echo $POD_CONTAINER
        """
      }
    }

    stage('Container 3') {
      container('docker') {
        sh """
        echo $POD_CONTAINER
        docker version
        ls -l
        """
      }
    }

  }

