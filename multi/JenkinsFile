 

  node("multi-con") {

    stage('Container 1') {
      container('jnlp') {
        sh """
        echo $POD_CONTAINER
        """
      }
    }

    stage('Container 2') {
      container('golang') {
        sh """
        echo $POD_CONTAINER
        """
      }
    }

    stage('Container 3') {
      container('docker') {
        sh """
        echo $POD_CONTAINER
        docker version
        """
      }
    }

  }

